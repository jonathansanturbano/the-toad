<nav class="banner" data-turbolinks-permanent>
  <div>
    <%= image_tag("banner.gif") %>
  </div>
  <div id="dropdown">
    <i class="fas fa-align-justify" style="font-size: 2rem"></i>
  </div>
  <div class="icons-setter">
    <% unless current_page?(root_path) %>
      <%= link_to root_path, class: "home-button" do %>
        <i class="fab fa-fort-awesome"></i>
      <% end %>
    <% end %>
    <% unless user_is_on_purchasing_pages? %>
      <% if user_has_empty_cart? %>
        <%= link_to basket_path, class: "cart hidden" do %>
          <i class="fas fa-shopping-cart"></span></i>
        <% end %>
      <% end %>
      <% if user_has_items? %>
        <%= link_to basket_path, class: "cart" do %>
          <i class="fas fa-shopping-cart"></span></i>
        <% end %>
      <% end %>
    <% end %>
  </div>
</nav>

<%= render 'shared/modal' %>
