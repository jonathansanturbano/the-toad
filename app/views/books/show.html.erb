<div class="text-center">
    <h2 class="book-title product">
      <%= @book.title %>
      <% if @book.category == "signed" %>
      (signed)
      <% end %>
    </h2>
    <div class="swiper-container my-4" id="swipe-container">
        <div class="swiper-wrapper" id="swipe-wrapper">
          <% @book.photos.each do |photo| %>
            <div class="swiper-slide swipe-slide">
                <%= cl_image_tag photo.key, :height=>450, :gravity=>'auto', :crop=>'fill' %>
            </div>
          <% end %>
        </div>
        <div class="swiper-pagination"></div>
    </div>
    <p class="book-description"><%= @book.description %></p>
  <div class="my-3">----------------------</div>
  <h3>Book Details</h3>
  <div class="book-details">
    <div class="book-detail">
      <p>Price</p>
      <p><span class="product-price"><%= @book.price%></span>â‚¬</p>
    </div>
    <div class="book-detail">
      <p>Material</p>
      <p><%= @book.material%></p>
    </div>
    <div class="book-detail">
      <p>Ages</p>
      <p><%= @book.age%></p>
    </div>
    <div class="book-detail">
      <p>Dimensions</p>
      <p><%= @book.size%></p>
    </div>
    <div class="book-detail">
      <p>Color scheme</p>
      <p><%= @book.color%></p>
    </div>
  </div>

  <%= link_to "Add to Cart", book_basket_items_path(@book), method: :create, class: "button add" %>

<p class="bulk-reminder">For orders in bulk, don't hesitate to reach out <%= link_to "directly", new_contact_path %> for a personalised quote!</p>


