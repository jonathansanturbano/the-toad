<div class="text-center">
  <h2 class="devise-title">Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs custom-form">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  label: false,
                  placeholder: "Enter email",
                  input_html: { autocomplete: "email", class: "custom-inputs"  }%>
      <%= f.input :password,
                  required: true,
                  label: false,
                  placeholder: "Enter password",
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", class: "custom-inputs"  } %>
      <%= f.input :password_confirmation,
                  required: true,
                  label: false,
                  placeholder: "Confirm password",
                  input_html: { autocomplete: "new-password", class: "custom-inputs"  } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "button"  %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
