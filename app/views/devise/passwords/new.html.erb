<div class="text-center">
  <h2 class="devise-title">Forgot your password?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs custom-form">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  label: false,
                  placeholder: "Enter email",
                  input_html: { autocomplete: "email", class: "custom-inputs" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Send reset email", class: "button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
