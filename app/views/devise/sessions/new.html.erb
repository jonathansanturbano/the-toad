<div class="text-center">

  <h2 class="devise-title">Log in</h2>


  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs custom-form">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label: false,
                  placeholder: "Enter email",

                  input_html: { autocomplete: "email", class: "custom-inputs" } %>

      <%= f.input :password,
                  required: false,
                  label: false,
                  placeholder: "Enter password",
                  input_html: { autocomplete: "current-password", class: "custom-inputs" } %>

      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
